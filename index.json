{
  "env": {
    "node": true
  },
  "ecmaFeatures": {
    "generators": true
  },
  "rules": {
    "array-bracket-spacing": [ 1, "always" ],
    "complexity": [ 1, 5 ],
    "curly": [ 2, "multi-line" ],
    "eqeqeq": [ 2, "allow-null" ],
    "eol-last": 1,
    "generator-star-spacing": [ 1, "after" ],
    "max-len": [ 1, 80 ],
    "max-params": [ 1, 5 ],
    "max-nested-callbacks": [ 1, 3 ],
    "new-parens": 1,
    "no-extend-native": 2,
    "no-eval": 2,
    "no-implied-eval": 2,
    "no-iterator": 2,
    "no-lone-blocks": 2,
    "no-loop-func": 2,
    "no-multi-str": 2,
    "no-native-reassign": 2,
    "no-new": 2,
    "no-new-func": 2,
    "no-new-object": 2,
    "no-new-wrappers": 2,
    "no-proto": 2,
    "no-return-assign": 2,
    "no-sequences": 2,
    "no-spaced-func": 1,
    "no-sync": 1,
    "no-trailing-spaces": 1,
    "no-undef-init": 2,
    "no-unused-expressions": 2,
    "no-use-before-define": [ 2, "nofunc" ],
    "no-with": 2,
    "object-curly-spacing": [ 1, "always" ],
    "quotes": [ 1, "single" ],
    "semi": 2,
    "space-after-keywords": [ 1, "always" ],
    "space-before-blocks": [ 1, "always" ],
    "space-before-function-paren": [ 1, { "anonymous": "always", "named": "never" } ],
    "space-in-parens": [ 1, "never" ],
    "space-infix-ops": 2,
    "space-return-throw-case": 2,
    "space-unary-ops": 2,
    "yoda": [ 2, "never" ]
  }
}
